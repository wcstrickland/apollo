<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apollo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://use.fontawesome.com/076ff70ca0.js"></script>
</head>

<body class="d-flex flex-column vh-100" style="background-color: rgb(250, 250, 250);">
        <main class="container mt-5 pt-5">
            <div class="row">
                <h1 class="text-center">Apollo</h1>
                <div class="col-8 offset-2 mb-5">
                    <form action="/" method="POST" novalidate class="validated-form" novalidate>
                        <% for( let i = 0; i < Math.max(q.strength.length, q.cardio.length, q.nutrition.length, q.mindset.length, q.mentalHealth.length, q.pain.length, q.stress.length); i++ ) { %>

                            <% for(const category in q) { %>

                                <% if (q[category].length > i) { %>

                                    <div class="my-3">
                                        <div class="card">
                                                <div class="my-2 mx-4 py-3 d-flex justify-content-center">
                                                    <label for="customRange3" class="form-label"> <%= q[category][i]["question"] %> </label>
                                                </div>
                                                <div class="d-flex justify-content-around mx-5 pt-2 pb-5">
                                                    <div class="me-2"><%= q[category][i]["left"] %></div>
                                                <input type="range" class="form-range" min="0" max="5" step="0.5" name="" id="customRange3">
                                                    <div class="ms-2"><%= q[category][i]["right"] %></div>
                                        </div>
                                    </div>
                                 
                                <% } %>

                            <% } %>

                        <% } %>
                        <div class="my-3 d-flex justify-content-center">
                            <button class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
            <script src="/javascripts/validateForms.js"></script>
</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apollo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>

<body class="d-flex flex-column vh-100" style="background-color: rgb(250, 250, 250);">
        <main class="container mt-5 pt-5">
            <div class="row">
                <h1 class="text-center mb-3">Be honest with yourself.</h1>
                <div class=" col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-12  mb-5">
                    <form action="/questionaire" method="POST" novalidate class="validated-form" novalidate>

                        <% for( let i = 0; i < Math.max(q.Strength.length, q.Cardio.length, q.Nutrition.length, q.Mindset.length, q.MentalHealth.length, q.Pain.length, q.Stress.length); i++ ) { %>

                            <% for(const category in q) { %>

                                <% if (q[category].length > i) { %>

                                    <div class="my-3">
                                        <div class="card">
                                                <div class="my-2 mx-2 py-2 d-flex justify-content-center">
                                                    <label for="<%- [category] %>" class="form-label"> <%= q[category][i]["question"] %> </label> 
                                                </div>
                                                <div class="d-flex justify-content-around mx-1 pt-2 pb-5">
                                                    <div ><%= q[category][i]["left"] %></div>
                                                <input type="range" class="form-range " min="0" max="10" step="1" name="<%- [category] %>" id="<%- [category] %>">
                                                    <div ><%= q[category][i]["right"] %></div>
                                                </div>
                                        </div>
                                    </div>
                                 
                                <% } %>

                            <% } %>

                        <% } %>

                        <div class="mb-3 col-md-6 offset-md-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="my-3 d-flex justify-content-center">
                            <button class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
            <script src="/javascripts/validateForms.js"></script>
</body>

</html>
